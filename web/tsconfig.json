{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "components*": [
        "./src/components*"
      ],
      "features*": [
        "./src/features*"
      ],
      "hooks*": [
        "./src/hooks*"
      ],
      "pages*": [
        "./src/pages*"
      ],
      "types*": [
        "./src/types*"
      ],
      "utils*": [
        "./src/utils*"
      ],
      "constants*": [
        "./src/constants*"
      ],
      "icons*": [
        "./src/icons*"
      ],
      "media*": [
        "./src/media*"
      ],
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "build",
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
